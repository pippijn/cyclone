OBJECTS[] =
  cyclone.o
  interproc.o

boot ()

LDFLAGS[] +=
  -L$(rootdir)/library/compiler
  -Wl,-rpath,$(absname $(rootdir)/library/compiler)

CYCFLAGS[] +=
  -I$(rootdir)/library/compiler

cyclone: $(OBJECTS) $(rootdir)/library/compiler/libcyclone.so $(rootdir)/library/stdlib/libcyc.so
  cc -m32 $(OBJECTS) -o $@ $(LDFLAGS) -lcyc -lcyclone

cyclone.boot: $(bootname $(OBJECTS)) $(rootdir)/library/compiler/libcyclone.boot.so $(rootdir)/library/stdlib/libcyc.boot.so
  cc -m32 $(bootname $(OBJECTS)) -o $@ $(LDFLAGS) -lcyc.boot -lcyclone.boot

.DEFAULT: cyclone
