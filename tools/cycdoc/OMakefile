OBJECTS[] =
  cycdoc.o

CYCLONE = $(rootdir)/tools/cyclone/cyclone

LDFLAGS[] +=
  -L$(rootdir)/library/compiler
  -Wl,-rpath,$(absname $(rootdir)/library/compiler)

CYCFLAGS[] +=
  -I$(rootdir)/library/compiler

cycdoc: $(OBJECTS) $(rootdir)/library/compiler/libcyclone.so $(rootdir)/library/stdlib/libcyc.so
  cc -m32 $(OBJECTS) -o $@ $(LDFLAGS) -lcyc -lcyclone

.DEFAULT: cycdoc
