OBJECTS[] =
  cycdoc.o

CYCLONE = $(rootdir)/tools/cyclone/cyclone

LDFLAGS[] +=
  -L$(rootdir)/compiler
  -Wl,-rpath,$(absname $(rootdir)/compiler)

CYCFLAGS[] +=
  -I$(rootdir)/compiler

cycdoc: $(OBJECTS) $(rootdir)/compiler/libcyclone.so $(rootdir)/stdlib/libcyc.so
  cc -m32 $(OBJECTS) -o $@ $(LDFLAGS) -lcyc -lcyclone

.DEFAULT: cycdoc
