LIBBANSHEE_CFLAGS[] =
  -I$(dir ../banshee)
  -I$(dir ../banshee/rlib)
  -Ddeletes=
  -Dtraditional=
  -Dsameregion=
  -Dparentptr=

LIBBANSHEE_LDFLAGS[] =
  -L$(dir ../banshee)
  -Wl,-rpath,$(absname ../banshee)
  -lbanshee

LIBBANSHEE = $(file ../banshee/libbanshee.so)

.SUBDIRS: inference

LDFLAGS		+= $(LIBBANSHEE_LDFLAGS)
LDFLAGS_BOOT	+= $(LIBBANSHEE_LDFLAGS)

LIBCYC		+= $(LIBBANSHEE)
LIBCYC_BOOT	+= $(LIBBANSHEE)

OBJECTS[] =
  inference/cycinf.o
  absyndump.o
  absyn.o
  absynpp.o
  assndef.o
  attributes.o
  bansheeif.o
  #bansheeif_stub.o
  binding.o
  callgraph.o
  cf_flowinfo.o
  cifc.o
  config.o
  currgn.o
  evexp.o
  flags.o
  formatstr.o
  insert_checks.o
  interface.o
  jump_analysis.o
  kinds.o
  lex.o
  lower.o
  low_treeshake.o
  new_control_flow.o
  parse_errors.o
  parse_tab.o
  port.o
  pratt_prover.o
  remove_aggregates.o
  remove_casts.o
  remove_labels.o
  rename_temps.o
  specsfile.o
  subtype.o
  tcdecl.o
  tcenv.o
  tcexp.o
  tc.o
  tcpat.o
  tcstmt.o
  tctyp.o
  tcutil.o
  toc.o
  toseqc.o
  tovc.o
  unify.o
  vcgen.o
  warn.o

boot ()

.SCANNER: scan-%.cyc: parse_tab.h parse_errors_gen.h

config.c: make-config.boot
  $< $(absname $(rootdir)) > $@

$(bootname config.c): config.c
  cp $< $@

libcyclone.so: $(OBJECTS) $(LIBCYC)
  cc -m32 -o $@ -shared -Wl,-z,defs $(OBJECTS) -lcyc $(LDFLAGS)

.SUBDIRS: $(bootname .)
  .SUBDIRS: inference
    CFLAGS += $(LIBBANSHEE_CFLAGS)

  libcyclone.boot.so: $(OBJECTS) $(LIBCYC_BOOT)
    cc -m32 -o $@ -shared -Wl,-z,defs $(OBJECTS) -lcyc.boot $(LDFLAGS_BOOT)

.DEFAULT: libcyclone.so
