  testasm
  testbget
  test_currgn
  testexn
  test_getopt
  test_large_vc_terms
  test_regions
  unique_patterns
  unique_test
  zeroterm

LDFLAGS += -lm -lpthread

touch mmap_test.txt


%.out: % %.ref $(LIBCYC)
  if $(file-exists $*_input):
    $< < $*_input >& $@
  elseif $(file-exists $*.txt):
    $< $*.txt >& $@
  else
    $< $< >& $@
  diff -u $@ $*.ref


foreach (exe => ..., $(EXES)):
  OBJECTS = $(exe).o

  switch $(exe):
  case foo:
    OBJECTS += foo_tab.o
    export
  case streambufftest:
    OBJECTS += streambuff.o
    export
  case md5:
    OBJECTS += md5driver.o
    export

  program ($(exe))

  check: $(exe).out
