HEADERS[] =
  md5.h
  streambuff.h

EXES[] =
  cinclude
  dynregion
  fallthru_tests
  flatlist
  foo
  hello
  histogram
  md5
  mmap_test
  multimethod
  offsetof_test
  patterns
  rc
  refcnt_reap_test
  refcnt_test
  require
  scheme
  scheme-2
  #sigaction_test
  streambufftest
  #structarray
  subset
  t1
  t2
  t3
  t4
