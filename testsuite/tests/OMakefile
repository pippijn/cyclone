EXES[] =
  cinclude
  dynregion
  fallthru_tests
  flatlist
  foo
  hello
  histogram
  md5
  multimethod
  offsetof_test
  patterns
  rc
  refcnt_reap_test
  refcnt_test
  require
  scheme
  scheme-2
  #sigaction_test
  streambufftest
  #structarray
  subset
  t1
  t2
  t3
  t4
  testaqualsuccess
  testasm
  testbget
  test_currgn
  testexn
  test_getopt
  test_large_vc_terms
  test_regions
  unique_patterns
  unique_test
  zeroterm

.PHONY: tests

%.out: % %.ref
  if $(file-exists $*_input):
    $< < $*_input >& $@
  elseif $(file-exists $*.txt):
    $< $*.txt >& $@
  else
    $< $< >& $@
  diff $@ $*.ref

foreach (exe => ..., $(EXES)):
  OBJECTS = $(exe).o

  switch $(exe):
  case foo:
    OBJECTS += foo_tab.o
    export
  case streambufftest:
    OBJECTS += streambuff.o
    export
  case md5:
    OBJECTS += md5driver.o
    export

  $(exe): $(OBJECTS) $(rootdir)/library/stdlib/libcyc.so
    cc -m32 $(OBJECTS) -o $@ $(LDFLAGS) -lcyc -lm -lpthread

  tests: $(exe)

  check: $(exe).out
